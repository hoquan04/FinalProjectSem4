</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        console.log('üîß Product Create script loaded');
        
        // Preview image
        $('#ImageUrl').on('input', function() {
            var url = $(this).val();
            var preview = $('#imagePreview');
            var noImageText = $('#noImageText');
            
            if (url && url.trim() !== '') {
                preview.attr('src', url).show();
                noImageText.hide();
                
                // Handle image load error
                preview.on('error', function() {
                    $(this).hide();
                    noImageText.show();
                });
            } else {
                preview.hide();
                noImageText.show();
            }
        });
        
        // Debug: Log t·∫•t c·∫£ form fields khi thay ƒë·ªïi
        $('input, select, textarea').on('change input', function() {
            console.log(`üìù Field changed: ${this.name} = ${this.value}`);
        });
        
        // JavaScript ƒë·ªÉ show loading khi submit
        $('#btnSubmit').click(function(e) {
            e.preventDefault(); // NgƒÉn submit m·∫∑c ƒë·ªãnh
            
            console.log('üñ±Ô∏è Submit button clicked');
            
            var $btn = $(this);
            var $form = $btn.closest('form');
            
            // Debug: Log t·∫•t c·∫£ form data TR∆Ø·ªöC validation
            console.log('üìã Form data BEFORE validation:');
            var formFields = {
                Name: $('#Name').val(),
                CategoryId: $('#CategoryId').val(),
                Description: $('#Description').val(),
                Price: $('#Price').val(),
                StockQuantity: $('#StockQuantity').val(),
                ImageUrl: $('#ImageUrl').val()
            };
            console.table(formFields);
            
            // Ki·ªÉm tra validation tr∆∞·ªõc khi submit
            if (!$form.valid()) {
                console.log('‚ùå Form validation failed');
                
                // Debug: Log validation errors
                var errors = [];
                $form.find('.field-validation-error').each(function() {
                    var errorText = $(this).text();
                    if (errorText) {
                        errors.push(errorText);
                    }
                });
                console.log('üìù Validation errors:', errors);
                
                return false;
            }
            
            console.log('‚úÖ Form validation passed');
            console.log('üöÄ Submitting form to:', $form.attr('action'));
            
            // Show loading state
            $btn.prop('disabled', true)
                .html('<i class="fa fa-spinner fa-spin"></i> ƒêang l∆∞u...');
            
            // Submit form manually
            $form.submit();
        });
        
        // Log form submit event
        $('form').on('submit', function(e) {
            console.log('üì§ Form is being submitted');
            console.log('üéØ Form action:', $(this).attr('action'));
            console.log('üéØ Form method:', $(this).attr('method'));
            
            // Log form data chi ti·∫øt
            var formData = new FormData(this);
            console.log('üìã FormData entries:');
            for (var pair of formData.entries()) {
                console.log(`   ${pair[0]}: ${pair[1]}`);
            }
            
            // Log serialized form
            console.log('üìä Serialized form:', $(this).serialize());
        });
        
        // Reset button n·∫øu c√≥ l·ªói validation
        $('form').on('invalid-form.validate', function() {
            console.log('‚ùå Form validation failed - resetting button');
            $('#btnSubmit').prop('disabled', false)
                          .html('<i class="fa fa-save"></i> L∆∞u s·∫£n ph·∫©m');
        });
        
        // Th√™m timeout ƒë·ªÉ reset button n·∫øu qu√° l√¢u
        var submitTimeout;
        $('form').on('submit', function() {
            submitTimeout = setTimeout(function() {
                $('#btnSubmit').prop('disabled', false)
                              .html('<i class="fa fa-save"></i> L∆∞u s·∫£n ph·∫©m');
                alert('Thao t√°c m·∫•t qu√° nhi·ªÅu th·ªùi gian. Vui l√≤ng ki·ªÉm tra k·∫øt n·ªëi API v√† th·ª≠ l·∫°i.');
            }, 30000); // 30 gi√¢y timeout
        });
        
        // Clear timeout khi page unload
        $(window).on('beforeunload', function() {
            if (submitTimeout) {
                clearTimeout(submitTimeout);
            }
        });
        
        // Debug: Test API constants
        console.log('üîß API Constants check:');
        console.log('   ProductApi URL: @AdminWeb.Areas.Admin.Data.ApiConstants.ProductApi');
    </script>
}
