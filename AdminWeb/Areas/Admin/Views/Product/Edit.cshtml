                <img id="imagePreview" src="@Model.ImageUrl" alt="Preview" 
                     style="max-width: 100%; max-height: 200px; @(string.IsNullOrEmpty(Model.ImageUrl) ? "display: none;" : "")" 
                     class="img-responsive">
                <div id="noImageText" class="text-muted" style="@(!string.IsNullOrEmpty(Model.ImageUrl) ? "display: none;" : "")">
                    <i class="fa fa-image fa-3x"></i>
                    <p>Ch∆∞a c√≥ h√¨nh ·∫£nh</p>
                </div>
            </div>
