@model AdminWeb.Areas.Admin.Models.Order

@{
    ViewData["Title"] = "Cập nhật đơn hàng";
}

<h2 class="mb-3">Cập nhật đơn hàng</h2>
<!-- Hiển thị lỗi chung -->
@* <div asp-validation-summary="All" class="alert alert-danger"></div> *@
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="OrderId" />

    <div class="mb-3">
        <label class="form-label">Tên tài khoản & Người nhận</label>
        <input type="text" readonly class="form-control" value="@ViewBag.UserAndRecipient" />
    </div>

    <div class="mb-3">
        <label class="form-label">Địa chỉ giao hàng</label>
        <input type="text" readonly class="form-control" value="@ViewBag.ShippingAddress" />
    </div>


    <div class="mb-3">
        <label asp-for="OrderDate" class="form-label"></label>
        <input readonly asp-for="OrderDate" type="datetime-local" class="form-control"
               value="@Model.OrderDate.ToString("yyyy-MM-ddTHH:mm")" />
        <span asp-validation-for="OrderDate" class="text-danger"></span>
    </div>




    <div class="mb-3">
        <label asp-for="TotalAmount" class="form-label"></label>
        <input readonly asp-for="TotalAmount" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="TotalAmount" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="UserId" />
    <input type="hidden" asp-for="ShippingId" />
    <div class="mb-3">
        <label asp-for="Status" class="form-label">Trạng thái</label>
        <select asp-for="Status" class="form-control" asp-items="ViewBag.statusList">
            <option value="">-- Chọn trạng thái --</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <br/>
    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
