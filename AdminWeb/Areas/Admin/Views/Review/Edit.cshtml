@model AdminWeb.Areas.Admin.Models.UpdateReviewViewModel
@{
    ViewData["Title"] = "Chỉnh sửa đánh giá";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card card-warning">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-edit"></i> Chỉnh sửa đánh giá #@Model.ReviewId
                    </h3>
                    <div class="card-tools">
                        <a asp-action="Index" class="btn btn-secondary btn-sm">
                            <i class="fas fa-arrow-left"></i> Quay lại
                        </a>
                    </div>
                </div>

                <form asp-action="Edit" asp-route-id="@Model.ReviewId" method="post">
                    <div class="card-body">
                        <!-- Alert Messages -->
                        @if (TempData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                <i class="icon fas fa-ban"></i> @TempData["ErrorMessage"]
                            </div>
                        }

                        <!-- Validation Summary -->
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" style="display: none;"></div>

                        <!-- Hidden field for ReviewId -->
                        <input asp-for="ReviewId" type="hidden" />

                        <!-- Review Information Display -->
                        @* <div class="row mb-3">
                            <div class="col-12">
                                <div class="alert alert-info">
                                    <h5><i class="fas fa-info-circle"></i> Thông tin đánh giá hiện tại</h5>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <strong>Mã đánh giá:</strong> #@Model.ReviewId<br>
                                            <strong>Sản phẩm ID:</strong> <span id="current-product-id">Đang tải...</span><br>
                                            <strong>Tên sản phẩm:</strong> <span id="current-product-name">Đang tải...</span>
                                        </div>
                                        <div class="col-md-6">
                                            <strong>Người dùng ID:</strong> <span id="current-user-id">Đang tải...</span><br>
                                            <strong>Tên người dùng:</strong> <span id="current-user-name">Đang tải...</span><br>
                                            <strong>Email:</strong> <span id="current-user-email">Đang tải...</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div> *@

                        <!-- Đánh giá sao -->
                        <div class="form-group">
                            <label asp-for="Rating" class="form-label required">
                                <i class="fas fa-star"></i> @Html.DisplayNameFor(model => model.Rating)
                            </label>
                            <div class="rating-input">
                                <div class="star-rating">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <span class="star @(Model.Rating >= i ? "selected" : "")" data-value="@i">&#9733;</span>
                                    }
                                </div>
                                <input type="hidden" id="Rating" name="Rating" value="@Model.Rating" />
                                <div class="rating-text mt-1">
                                    <small class="text-muted">Chọn số sao để đánh giá (1-5 sao)</small>
                                    <br><small class="text-info">Đánh giá hiện tại: <span id="current-rating">@Model.Rating</span> sao</small>
                                </div>
                            </div>
                            <span asp-validation-for="Rating" class="text-danger small"></span>
                        </div>

                        <!-- Bình luận -->
                        <div class="form-group">
                            <label asp-for="Comment" class="form-label">
                                <i class="fas fa-comment"></i> @Html.DisplayNameFor(model => model.Comment)
                            </label>
                            <textarea asp-for="Comment"
                                      class="form-control"
                                      rows="4"
                                      placeholder="Nhập bình luận của bạn về sản phẩm (không bắt buộc)..."
                                      maxlength="500"></textarea>
                            <span asp-validation-for="Comment" class="text-danger small"></span>
                            <div class="mt-1">
                                <small class="text-muted">
                                    <span id="comment-count">0</span>/500 ký tự
                                </small>
                            </div>
                        </div>

                        <!-- Preview -->
                        @* <div class="form-group">
                            <div class="card">
                                <div class="card-header bg-light">
                                    <h5 class="card-title mb-0">
                                        <i class="fas fa-eye"></i> Xem trước thay đổi
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div id="review-preview">
                                        <div class="review-info mb-3">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <strong>Mã đánh giá:</strong> #@Model.ReviewId
                                                </div>
                                                <div class="col-md-6">
                                                    <strong>Sản phẩm:</strong>
                                                    <span id="preview-product">Đang tải...</span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="review-rating mb-2">
                                            <strong>Đánh giá mới:</strong>
                                            <span id="preview-stars" class="ml-2">
                                                <span class="text-muted">Chưa thay đổi</span>
                                            </span>
                                        </div>
                                        <div class="review-comment">
                                            <strong>Bình luận mới:</strong>
                                            <div id="preview-comment" class="mt-1 p-2 bg-light rounded">
                                                <em class="text-muted">Chưa thay đổi</em>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div> *@
                    </div>

                    <div class="card-footer">
                        <div class="row">
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-warning btn-block">
                                    <i class="fas fa-save"></i> Cập nhật đánh giá
                                </button>
                            </div>
                            <div class="col-md-4">
                                <a asp-action="Details" asp-route-id="@Model.ReviewId" class="btn btn-info btn-block">
                                    <i class="fas fa-eye"></i> Xem chi tiết
                                </a>
                            </div>
                            <div class="col-md-4">
                                <a asp-action="Index" class="btn btn-secondary btn-block">
                                    <i class="fas fa-times"></i> Hủy bỏ
                                </a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>

    .star {
        font-size: 30px;
        cursor: pointer;
        color: gray;
        transition: color 0.2s;
    }

        .star.selected {
            color: gold;
        }

        .star.hovered {
            color: orange;
        }
    .required::after {
        content: " *";
        color: red;
    }

    .star-rating {
        font-size: 2rem;
        margin: 10px 0;
    }

    .star {
        cursor: pointer;
        color: #ccc;
        transition: color 0.2s;
        margin-right: 5px;
    }

        .star:hover,
        .star.active {
            color: #ffc107;
        }

        .star i {
            transition: all 0.2s;
        }

        .star:hover i,
        .star.active i {
            transform: scale(1.1);
        }

    .form-control:focus {
        border-color: #ffc107;
        box-shadow: 0 0 0 0.2rem rgba(255, 193, 7, 0.25);
    }

    /* .card-warning .card-header {
        background: linear-gradient(45deg, #ffc107, #ff8f00);
        color: white;
    } */

    .alert-info {
        border-left: 4px solid #17a2b8;
    }

    #review-preview {
        min-height: 120px;
    }

    @@media (max-width: 768px) {
        .col-md-8.offset-md-2

    {
        margin-left: 0;
        padding: 0 15px;
    }

    .star-rating {
        font-size: 1.5rem;
        text-align: center;
    }

    .card-footer .btn {
        margin-bottom: 10px;
    }

    }
</style>

<script>
    $(document).ready(function() {
        // Initialize current rating
        var currentRating = @Model.Rating;
        $('#Rating').val(currentRating);

        // Set initial stars
        setStarRating(currentRating);

        // Load current review info
        loadCurrentReviewInfo();

        // Initialize comment count
        updateCommentCount();

        // Initialize preview
        updatePreview();

        // Star Rating Functionality
        $('.star').on('click', function() {
            var rating = $(this).data('value');
            $('#Rating').val(rating);
            setStarRating(rating);
            updatePreview();
        });

        // Star hover effect
        $('.star').on('mouseenter', function() {
            var rating = $(this).data('value');
            $('.star').removeClass('hover');

            for(var i = 1; i <= rating; i++) {
                $('.star[data-value="' + i + '"]').addClass('hover');
            }
        });

        $('.star-rating').on('mouseleave', function() {
            $('.star').removeClass('hover');
        });

        // Comment character count
        $('#Comment').on('input', function() {
            updateCommentCount();
            updatePreview();
        });

        function setStarRating(rating) {
            $('.star').removeClass('active');
            $('.star i').removeClass('fas').addClass('far');

            for(var i = 1; i <= rating; i++) {
                $('.star[data-value="' + i + '"]').addClass('active');
                $('.star[data-value="' + i + '"] i').removeClass('far').addClass('fas');
            }
        }

        function updateCommentCount() {
            var length = $('#Comment').val().length;
            $('#comment-count').text(length);
        }

        function loadCurrentReviewInfo() {
            // Gọi API để lấy thông tin chi tiết của review
            $.ajax({
                url: '/Admin/Review/Details/@Model.ReviewId',
                type: 'GET',
                success: function(response) {
                    // Mock data - thay thế bằng dữ liệu thật từ API response
                    $('#current-product-id').text('1');
                    $('#current-product-name').text('iPhone 15 Pro Max');
                    $('#current-user-id').text('1');
                    $('#current-user-name').text('Nguyễn Văn A');
                    $('#current-user-email').text('nguyenvana@email.com');

                    $('#preview-product').text('iPhone 15 Pro Max');
                },
                error: function() {
                    $('#current-product-id').text('Không tải được');
                    $('#current-product-name').text('Không tải được');
                    $('#current-user-id').text('Không tải được');
                    $('#current-user-name').text('Không tải được');
                    $('#current-user-email').text('Không tải được');
                }
            });
        }

        function updatePreview() {
            var rating = $('#Rating').val();
            var comment = $('#Comment').val();

            // Update preview stars
            if(rating > 0) {
                var starsHtml = '';
                for(var i = 1; i <= 5; i++) {
                    if(i <= rating) {
                        starsHtml += '<i class="fas fa-star text-warning"></i>';
                    } else {
                        starsHtml += '<i class="far fa-star text-muted"></i>';
                    }
                }
                starsHtml += ' (' + rating + '/5)';

                if(rating != currentRating) {
                    starsHtml += ' <span class="badge badge-warning">Thay đổi từ ' + currentRating + ' sao</span>';
                }

                $('#preview-stars').html(starsHtml);
            } else {
                $('#preview-stars').html('<span class="text-muted">Chưa chọn đánh giá</span>');
            }

            // Update preview comment
            var originalComment = '@Html.Raw(Html.Encode(Model.Comment ?? ""))';
            if(comment.trim()) {
                var commentHtml = '<div class="text-dark">' + comment + '</div>';
                if(comment.trim() !== originalComment.trim()) {
                    commentHtml += '<small class="text-warning"><i class="fas fa-edit"></i> Đã thay đổi</small>';
                }
                $('#preview-comment').html(commentHtml);
            } else {
                if(originalComment.trim()) {
                    $('#preview-comment').html('<div class="text-muted"><em>Đã xóa bình luận</em></div>');
                } else {
                    $('#preview-comment').html('<em class="text-muted">Không có bình luận</em>');
                }
            }
        }

        // Form validation
        $('form').on('submit', function(e) {
            var rating = $('#Rating').val();
            if(!rating || rating == 0) {
                e.preventDefault();
                alert('Vui lòng chọn đánh giá sao!');
                return false;
            }

            // Confirm changes
            if(rating != currentRating || $('#Comment').val().trim() !== '@Html.Raw(Html.Encode(Model.Comment ?? ""))'.trim()) {
                if(!confirm('Bạn có chắc chắn muốn lưu các thay đổi này?')) {
                    e.preventDefault();
                    return false;
                }
            }
        });

        // Auto-hide alerts
        setTimeout(function() {
            $('.alert').fadeOut();
        }, 5000);
    });


    const stars = document.querySelectorAll('.star-rating .star');
    const ratingInput = document.getElementById('Rating');

    function highlightStars(value) {
        stars.forEach(s => {
            const starValue = parseInt(s.getAttribute('data-value'));
            s.classList.toggle('selected', starValue <= value);
        });
    }

    stars.forEach(star => {
        // Hover effect
        star.addEventListener('mouseover', function () {
            const value = parseInt(this.getAttribute('data-value'));
            stars.forEach(s => {
                const starValue = parseInt(s.getAttribute('data-value'));
                s.classList.toggle('hovered', starValue <= value);
            });
        });

        // Remove hover effect khi rời chuột
        star.addEventListener('mouseout', function () {
            stars.forEach(s => s.classList.remove('hovered'));
        });

        // Click chọn số sao
        star.addEventListener('click', function () {
            const value = parseInt(this.getAttribute('data-value'));
            ratingInput.value = value;
            highlightStars(value);
        });
    });

    // Khởi tạo: highlight theo Model.Rating nếu có
    if (ratingInput.value) {
        highlightStars(parseInt(ratingInput.value));
    }
</script>