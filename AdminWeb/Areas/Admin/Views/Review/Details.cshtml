@model AdminWeb.Areas.Admin.Models.ReviewViewModel
@{
    ViewData["Title"] = "Chi tiết đánh giá";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-lg-8">
        <div class="ibox">
            <div class="ibox-title">
                <h5>@ViewData["Title"]</h5>
                <div class="ibox-tools">
                    <a asp-action="Index" class="btn btn-sm btn-secondary">
                        <i class="fa fa-arrow-left"></i> Quay lại danh sách
                    </a>

                </div>
            </div>
            <div class="ibox-content">

                @* Form hiển thị thông tin (read-only) *@
                <div class="form-horizontal">

                    @* Trường ID sản phẩm *@
                    <div class="form-group">
                        <label class="col-sm-2 control-label">ID đánh giá</label>
                        <div class="col-sm-10">
                            <p class="form-control-static">
                                <span class="badge badge-primary">@Model.ReviewId</span>
                            </p>
                        </div>
                    </div>

                    @* Trường Tên sản phẩm *@
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Tên sản phẩm</label>
                        <div class="col-sm-10">
                            <p class="form-control-static">
                                <strong>@(Model.ProductName ?? "Không có thông tin")</strong>
                            </p>
                        </div>
                    </div>

                    @* Trường Tên sản phẩm *@
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Tên Người dùng</label>
                        <div class="col-sm-10">
                            <p class="form-control-static">
                                <strong>@(Model.UserFullName ?? "Không có thông tin")</strong>
                            </p>
                        </div>
                    </div>

                    @* Trường Mô tả *@
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Mô tả</label>
                        <div class="col-sm-10">
                            <div class="card-body">
                                @if (!string.IsNullOrWhiteSpace(Model.Comment))
                                {
                                    <div class="comment-content">
                                        <blockquote class="quote-secondary">
                                            <p>@Model.Comment</p>
                                            <small class="text-muted">
                                                @(Model.UserFullName ?? "Người dùng")
                                            </small>
                                        </blockquote>
                                    </div>
                                }
                                else
                                {
                                    <div class="text-center text-muted py-4">
                                        <i class="fas fa-comment-slash fa-3x mb-3"></i>
                                        <p>Không có bình luận nào được để lại</p>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    @* Trường sao *@
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Đánh giá sao</label>
                        <div class="form-control-static">
                            @for (int i = 1; i <= 5; i++)
                            {
                                if (i <= Model.Rating)
                                {
                                    <i class="fas fa-star text-warning"></i>
                                }
                                else
                                {
                                    <i class="far fa-star text-muted"></i>
                                }
                            }
                            <span class="rating-text">(@Model.Rating/5)</span>
                        </div>
                    </div>



                    @* Trường Ngày tạo *@
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Ngày tạo</label>
                        <div class="col-sm-10">
                            <p class="form-control-static">
                                <span>@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm:ss")</span>
                                <small class="text-muted ml-2">
                                    (@Model.CreatedAt.ToString("dddd, MMMM dd, yyyy", new System.Globalization.CultureInfo("vi-VN")))
                                </small>
                            </p>
                        </div>
                    </div>

                    <div class="hr-line-dashed"></div>

                    @* Buttons *@
                    @* <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-2">
                            <a asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-warning">
                                <i class="fa fa-edit"></i> Chỉnh sửa sản phẩm
                            </a>
                            <a asp-action="Index" class="btn btn-default">
                                <i class="fa fa-list"></i> Danh sách sản phẩm
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.ProductId" class="btn btn-danger">
                                <i class="fa fa-trash"></i> Xóa sản phẩm
                            </a>
                        </div>
                    </div> *@
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>

        $(document).ready(function() {
            // Highlight important info
            $('.badge, .label').addClass('animated pulse');

            // Add tooltips to actions
            $('[title]').tooltip();

            // Log product details for debugging
            console.log('✅ Review details view initialized successfully');
        });
    </script>
}
