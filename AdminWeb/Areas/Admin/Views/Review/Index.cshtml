@{
    ViewData["Title"] = "Danh s√°ch ƒë√°nh gi√°";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    int currentPage = ViewBag.CurrentPage ?? 1;
    int pageSize = ViewBag.PageSize ?? 10;
    int totalPages = ViewBag.TotalPages ?? 0;
    int totalCount = ViewBag.TotalCount ?? 0;
    var searchModel = ViewBag.SearchModel as AdminWeb.Areas.Admin.Models.ReviewSearchViewModel;
    int stt = 1;
}
<div class="col-lg-12">
    <div class="ibox-content">

        @* üöÄ Success/Error Messages *@
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissable">
                <button aria-hidden="true" data-dismiss="alert" class="close" type="button">√ó</button>
                <i class="fa fa-check"></i> @TempData["SuccessMessage"]
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissable">
                <button aria-hidden="true" data-dismiss="alert" class="close" type="button">√ó</button>
                <i class="fa fa-times"></i> @TempData["ErrorMessage"]
            </div>
        }

        <div class="row">
            <form asp-action="Search" method="get">
                <div class="col-sm-2">
                    <div class="input-group">
                        <input type="text" name="SearchKeyword" value="@(searchModel?.SearchKeyword)" placeholder="T√¨m ki·∫øm theo t√™n s·∫£n ph·∫©m v√† ng∆∞·ªùi d√πng..." class="input-sm form-control">
                        <span class="input-group-btn">
                            <button type="submit" class="btn btn-sm btn-primary">
                                <i class="fa fa-search"></i> T√¨m ki·∫øm
                            </button>
                        </span>
                    </div>
                </div>

                <div class="col-sm-2">
                    <select name="pageSize" class="form-control input-sm" onchange="this.form.submit()">
                        <option value="10" selected="@(pageSize == 10)">10 ƒë√°nh gi√°/trang</option>
                        <option value="20" selected="@(pageSize == 20)">20 ƒë√°nh gi√°/trang</option>
                        <option value="50" selected="@(pageSize == 50)">50 ƒë√°nh gi√°/trang</option>
                        <option value="100" selected="@(pageSize == 100)">100 ƒë√°nh gi√°/trang</option>
                    </select>
                </div>
                <input name="PageNumber" value="1" type="hidden" />
            </form>
        </div>

        @* Error t·ª´ API call *@
        @if (!string.IsNullOrEmpty(ViewBag.Error))
        {
            <div class="alert alert-danger mt-3">
                <strong><i class="fa fa-exclamation-triangle"></i> @ViewBag.Error</strong>
                @if (!string.IsNullOrEmpty(ViewBag.ErrorDetail))
                {
                    <br>

                    <small>@ViewBag.ErrorDetail</small>
                }
                <br><small class="text-muted">
                    <strong>H∆∞·ªõng d·∫´n:</strong> ƒê·∫£m b·∫£o API ƒëang ch·∫°y t·∫°i <code>@AdminWeb.Areas.Admin.Data.ApiConstants.ReviewApi</code>
                </small>
            </div>
        }

        <div class="table-responsive mt-3">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>ID</th>
                        <th>S·∫£n ph·∫©m</th>
                        <th>Ng∆∞·ªùi d√πng</th>
                        <th>ƒê√°nh gi√°</th>
                        <th>B√¨nh lu·∫≠n</th>
                        <th>Ng√†y t·∫°o</th>
                        <th>Thao t√°c</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@(stt++)</td>
                                <td>
                                    <span class="badge badge-primary">@item.ReviewId</span>
                                </td>
                                <td>
                                    <span>@item.ProductName</span>
                                </td>
                                <td>
                                    <span>@item.UserFullName</span>
                                </td>
                                <td>
                                    <div class="rating">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            if (i <= item.Rating)
                                            {
                                                <i class="fas fa-star text-warning"></i>
                                            }
                                            else
                                            {
                                                <i class="far fa-star text-muted"></i>
                                            }
                                        }
                                        <span class="ml-1">(@item.Rating/5)</span>
                                    </div>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.Comment))
                                    {
                                        <div title="@item.Comment">
                                            @(item.Comment.Length > 50 ? item.Comment.Substring(0, 50) + "..." : item.Comment)
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Kh√¥ng c√≥ b√¨nh lu·∫≠n</span>
                                    }
                                </td>
                                <td>
                                    <small>@item.CreatedAt.ToString("dd/MM/yyyy")</small>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.ReviewId"
                                           class="btn btn-sm btn-info" title="Xem chi ti·∫øt">
                                            <i class="fa fa-eye"></i> Chi ti·∫øt
                                        </a>
                                        @* <a asp-action="Edit" asp-route-id="@item.ReviewId"
                                           class="btn btn-sm btn-warning" title="Ch·ªânh s·ª≠a">
                                            <i class="fa fa-edit"></i> S·ª≠a
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.ReviewId"
                                           class="btn btn-sm btn-danger" title="X√≥a">
                                            <i class="fa fa-trash"></i> X√≥a
                                        </a> *@
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center">
                                <div class="p-3">
                                    <i class="fas fa-inbox fa-3x text-muted"></i>
                                    <p class="mt-2 text-muted">Kh√¥ng c√≥ d·ªØ li·ªáu ƒë√°nh gi√°</p>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- üìå Ph√¢n trang -->
        @if (totalPages > 1)
        {
            <nav>
                <ul class="pagination">
                    @if (currentPage > 1)
                    {
                        <li class="paginate_button page-item previous">
                            @if (searchModel != null)
                            {
                                <a asp-action="Search"
                                   asp-route-SearchKeyword="@searchModel.SearchKeyword"
                                   asp-route-PageNumber="@(currentPage - 1)"
                                   asp-route-PageSize="@pageSize"
                                   class="page-link">¬´</a>
                            }
                            else
                            {
                                <a asp-action="Index" asp-route-page="@(currentPage - 1)" asp-route-pageSize="@pageSize" class="page-link">¬´</a>
                            }
                        </li>
                    }

                    @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                    {
                        <li class="paginate_button page-item @(i == currentPage ? "active" : "")">
                            @if (searchModel != null)
                            {
                                <a asp-action="Search"
                                   asp-route-SearchKeyword="@searchModel.SearchKeyword"
                                   asp-route-PageNumber="@i"
                                   asp-route-PageSize="@pageSize"
                                   class="page-link">@i</a>
                            }
                            else
                            {
                                <a asp-action="Index" asp-route-page="@i" asp-route-pageSize="@pageSize" class="page-link">@i</a>
                            }
                        </li>
                    }

                    @if (currentPage < totalPages)
                    {
                        <li class="paginate_button page-item next">
                            @if (searchModel != null)
                            {
                                <a asp-action="Search"
                                   asp-route-SearchKeyword="@searchModel.SearchKeyword"
                                   asp-route-PageNumber="@(currentPage + 1)"
                                   asp-route-PageSize="@pageSize"
                                   class="page-link">¬ª</a>
                            }
                            else
                            {
                                <a asp-action="Index" asp-route-page="@(currentPage + 1)" asp-route-pageSize="@pageSize" class="page-link">¬ª</a>
                            }
                        </li>
                    }
                </ul>
            </nav>
        }

        @* Footer info *@
        @if (Model != null && Model.Any())
        {
            <div class="row mt-3">
                <div class="col-sm-6">
                    <small class="text-muted">
                        <i class="fa fa-info-circle"></i>
                        Hi·ªÉn th·ªã <strong>@Model.Count</strong> ƒë√°nh gi√° tr√™n trang @currentPage/@totalPages (T·ªïng: @totalCount ƒë√°nh gi√°)
                        @if (!string.IsNullOrEmpty(searchModel?.SearchKeyword))
                        {
                            <span>cho t·ª´ kh√≥a "<strong>@(searchModel?.SearchKeyword)</strong>"</span>
                        }
                    </small>
                </div>
                <div class="col-sm-6 text-right">
                </div>
            </div>
        }
    </div>
</div>

