@model AdminWeb.Areas.Admin.Models.ProfileEditViewModel
@{
    ViewData["Title"] = "Hồ sơ quản trị";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<h2 class="mb-3">Hồ sơ quản trị</h2>

@await Html.PartialAsync("~/Areas/Admin/Views/Shared/_NotificationPartial.cshtml")

<form asp-action="Index" method="post" class="card p-4 shadow-sm" style="max-width:640px">
    <div class="mb-3">
        <label class="form-label">Email</label>
        <input class="form-control" value="@Model.Email" readonly />
    </div>
    <div class="mb-3">
        <label asp-for="FullName" class="form-label"></label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Phone" class="form-label"></label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Address" class="form-label"></label>
        <textarea asp-for="Address" class="form-control"></textarea>
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="CreatedAt" class="form-label"></label>
        <input class="form-control" value="@Model.CreatedAt" readonly />
    </div>
    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
        <a asp-action="ChangePassword" class="btn btn-outline-secondary">Đổi mật khẩu</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
